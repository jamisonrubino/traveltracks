<div id="welcome">
    <% if !current_user %>
        <%= link_to "Sign in to Spotify", '/auth/spotify', class: "sign-in" %>
    <% else %>
        
        <%= form_tag("/set_time", method:"post") %>
            <%= label_tag(:time, "Trip time") %>
            <%= number_field :time, "input", min: 0, step: 10 %>
            <%= submit_tag("Make playlist") %>
    <% end %>
</div>

<script src="../assets/javascripts/welcome.js"></script>